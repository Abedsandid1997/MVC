{% extends "base3.html.twig" %}

{% block title %}draw 1 card{% endblock %}

{% block body %}

<h2>kort antal : {{antal}}</h2>
<h2>banken</h2>
<img width= "70px"src="{{ asset('img/kort.png') }}" alt="Card Image">
{{ include('flash.html.twig') }}

<div class= "me_table">

    {% for card in cards %}

        <div class="card">
            <img width= "70px"src="{{ asset(card.getCard()) }}" alt="Card Image">
        </div>
    
{% endfor %}
   


</div>
<h2>your points is: {{value}}</h2>
{% if value <= 21 %}
<div>
<a href='{{ path('game-player-draw') }}' class="button button-yellow">draw</a>
<a href='{{ path('game-bank-draw') }}' class="button button-yellow">stop</a>
</div>
{% else %}
    <a href='{{ path('new_game') }}' class="button button-yellow">start new game</a>
{% endif %}


{% endblock %}



